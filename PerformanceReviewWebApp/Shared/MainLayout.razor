@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Fixed="false" Color="Color.Warning">
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" Href="/login" />
        <MudSpacer />
        <MudText Typo="Typo.h5">VXI</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@(() => OpenDrawer(Anchor.Top))" />
    </MudAppBar>
    <MudDrawer Color="Color.Dark" @bind-Open="@open" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Activities</MudText>
        </MudDrawerHeader>
        <MudNavMenu Color="Color.Warning">
            <MudNavLink Match="NavLinkMatch.All" Href="/weeklycheckin">Weekly Check-in</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/engagementpluserating">Engagement Pulse</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/skillspotlight">Skills Spotlight</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open;
    Anchor anchor;

    void OpenDrawer(Anchor anchor)
    {
        open = true;
        this.anchor = anchor;
    }
}

